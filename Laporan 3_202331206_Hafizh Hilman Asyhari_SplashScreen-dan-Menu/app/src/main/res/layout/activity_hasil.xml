<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_gray"
    tools:context=".HasilActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/headerCardHasil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="24dp"
                android:background="@drawable/gradient_header">

                <!-- Success Icon -->
                <ImageView
                    android:id="@+id/imgSuccess"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_success"
                    android:contentDescription="@string/success_icon"/>

                <!-- Title -->
                <TextView
                    android:id="@+id/tvResultTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/result_title"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="12dp"/>

                <!-- Subtitle -->
                <TextView
                    android:id="@+id/tvResultSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/result_subtitle"
                    android:textSize="14sp"
                    android:textColor="@color/white_80"
                    android:layout_marginTop="4dp"
                    android:textAlignment="center"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Data Result Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/dataResultCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/headerCardHasil"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Data Title -->
                <TextView
                    android:id="@+id/tvDataTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/data_title"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp"/>

                <!-- Nama Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/data_item_background"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/labelNamaResult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_nama"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"/>

                    <TextView
                        android:id="@+id/tvNamaResult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="John Doe"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="4dp"
                        tools:text="John Doe"/>

                </LinearLayout>

                <!-- NIM Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/data_item_background"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/labelNimResult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_nim"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"/>

                    <TextView
                        android:id="@+id/tvNimResult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123456789"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="4dp"
                        tools:text="123456789"/>

                </LinearLayout>

                <!-- Jenis Kelamin Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/data_item_background"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/labelJenisKelaminResult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_jenis_kelamin"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"/>

                    <TextView
                        android:id="@+id/tvJenisKelaminResult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Laki-laki"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="4dp"
                        tools:text="Laki-laki"/>

                </LinearLayout>

                <!-- Hobi Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/data_item_background"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/labelHobiResult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_hobi"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"/>

                    <TextView
                        android:id="@+id/tvHobiResult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Membaca"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="4dp"
                        tools:text="Membaca"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/actionButtonsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/dataResultCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp">

            <!-- Button Kembali -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnKembali"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/button_kembali"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="12dp"
                android:backgroundTint="@color/primary_blue"
                app:icon="@drawable/ic_back"
                app:iconGravity="textStart"/>

            <!-- Button Share (Optional) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnShare"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/button_share"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="12dp"
                android:layout_marginTop="12dp"
                app:strokeColor="@color/primary_blue"
                android:textColor="@color/primary_blue"
                app:icon="@drawable/ic_share"
                app:iconGravity="textStart"
                app:iconTint="@color/primary_blue"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>