<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_gray"
    tools:context=".MenuActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/headerCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="24dp"
                android:background="@drawable/gradient_header">

                <!-- Logo -->
                <ImageView
                    android:id="@+id/imgLogoMenu"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_app_logo"
                    android:contentDescription="@string/app_logo"/>

                <!-- Title -->
                <TextView
                    android:id="@+id/tvHeaderTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/form_title"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="12dp"/>

                <!-- Subtitle -->
                <TextView
                    android:id="@+id/tvHeaderSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/form_subtitle"
                    android:textSize="14sp"
                    android:textColor="@color/white_80"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Form Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/formCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/headerCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Nama Section -->
                <TextView
                    android:id="@+id/labelNama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_nama"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilNama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:boxStrokeColor="@color/primary_blue"
                    app:hintTextColor="@color/primary_blue">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_nama"
                        android:inputType="textPersonName"
                        android:textSize="14sp"/>

                </com.google.android.material.textfield.TextInputLayout>

                <!-- NIM Section -->
                <TextView
                    android:id="@+id/labelNim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_nim"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="16dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilNim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:boxStrokeColor="@color/primary_blue"
                    app:hintTextColor="@color/primary_blue">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNim"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_nim"
                        android:inputType="number"
                        android:maxLength="10"
                        android:textSize="14sp"/>

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Jenis Kelamin Section -->
                <TextView
                    android:id="@+id/labelJenisKelamin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_jenis_kelamin"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="16dp"/>

                <RadioGroup
                    android:id="@+id/rgJenisKelamin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <RadioButton
                        android:id="@+id/rbLakiLaki"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/radio_laki"
                        android:textSize="14sp"
                        android:buttonTint="@color/primary_blue"/>

                    <RadioButton
                        android:id="@+id/rbPerempuan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/radio_perempuan"
                        android:textSize="14sp"
                        android:buttonTint="@color/primary_blue"/>

                </RadioGroup>

                <!-- Hobi Section -->
                <TextView
                    android:id="@+id/labelHobi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_hobi"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="16dp"/>

                <Spinner
                    android:id="@+id/spinnerHobi"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/spinner_background"
                    android:padding="12dp"
                    android:spinnerMode="dropdown"/>

                <!-- Checkbox Konfirmasi -->
                <CheckBox
                    android:id="@+id/cbKonfirmasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/checkbox_konfirmasi"
                    android:textSize="12sp"
                    android:layout_marginTop="16dp"
                    android:buttonTint="@color/primary_blue"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Button Kirim -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnKirim"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/button_kirim"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/formCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/primary_blue"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>